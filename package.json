{
	"name": "website",
	"version": "1.0.0",
	"author": "Vincent Link <mail@linkvt.de>",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"@fontsource/lato": "5.0.17",
		"@fortawesome/fontawesome-free": "6.5.1",
		"@tailwindcss/typography": "0.5.10",
		"hugo-bin": "0.116.4",
		"tailwindcss": "3.3.5"
	},
	"devDependencies": {
		"autoprefixer": "10.4.16",
		"concurrently": "8.2.2",
		"postcss": "8.4.32",
		"postcss-cli": "10.1.0",
		"prettier": "3.1.0",
		"prettier-plugin-go-template": "0.0.15",
		"prettier-plugin-tailwindcss": "0.5.7",
		"rimraf": "5.0.5"
	},
	"scripts": {
		"build": "pnpm clean && pnpm build:tailwind && pnpm build:hugo",
		"build:tailwind": "NODE_ENV=production pnpm tailwind --minify",
		"build:hugo": "hugo --minify",
		"clean": "rimraf public/",
		"dev": "concurrently pnpm:dev:*",
		"dev:tailwind": "pnpm tailwind --watch",
		"dev:hugo": "hugo server",
		"start": "pnpm dev",
		"tailwind": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css"
	},
	"hugo-bin": {
		"buildTags": "extended"
	}
}
