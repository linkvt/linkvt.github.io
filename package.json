{
	"name": "website",
	"version": "1.0.0",
	"author": "Vincent Link <mail@linkvt.de>",
	"license": "MIT",
	"private": true,
	"dependencies": {
		"@fontsource/lato": "4.5.10",
		"@fortawesome/fontawesome-free": "6.4.0",
		"@tailwindcss/typography": "0.5.9",
		"hugo-bin": "0.101.5",
		"tailwindcss": "3.3.1"
	},
	"devDependencies": {
		"autoprefixer": "10.4.14",
		"concurrently": "8.0.1",
		"postcss": "8.4.23",
		"postcss-cli": "10.1.0",
		"prettier": "2.8.8",
		"prettier-plugin-go-template": "0.0.13",
		"prettier-plugin-tailwindcss": "0.2.6",
		"rimraf": "4.4.1"
	},
	"scripts": {
		"build": "yarn clean && yarn build:tailwind && yarn build:hugo",
		"build:tailwind": "NODE_ENV=production yarn tailwind --minify",
		"build:hugo": "hugo --minify",
		"clean": "rimraf public/",
		"dev": "concurrently yarn:dev:*",
		"dev:tailwind": "yarn tailwind --watch",
		"dev:hugo": "hugo server",
		"start": "yarn dev",
		"tailwind": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css"
	},
	"hugo-bin": {
		"buildTags": "extended"
	}
}
